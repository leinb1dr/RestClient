doctype
html(ng-app='RestClientApp')
  head
    title #{title} - My Site
    base(href="/")
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/my-style.css')
    link(rel='stylesheet', href='/css/angular-ui-tree.min.css')

    script(src='//cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/ace.js')
    script(src='/js/lib/angular.min.js')
    script(src='/js/lib/angular-ui-tree.min.js')
    script(src='/js/lib/angular-route.min.js')
    script(src='/js/lib/ui-bootstrap-0.11.0.min.js')

    script(src='/js/controllers/rest_client_controller.js')
    
    script(src='/js/factories/ace_factory.js')
    script(src='/js/factories/constants_factory.js')
    script(src='/js/factories/new_project_modal_factory.js')

    script(src='/js/services/project_service.js')

    script(src='/js/app.js')

  body(ng-controller='RestClientCtrl')
    header.page-header
      h1.text-center My Site
    .container-fluid
      .row
        .col-lg-2
          block sidebar
        .col-lg-5
          block request
        .col-lg-5
          block response
    .text-center
      p Running on node with Express, Jade and Stylus