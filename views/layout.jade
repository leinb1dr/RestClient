doctype
html(ng-app='RestClientApp')
  head
    title #{title} - My Site
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/my-style.css')
    script(src='//cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/ace.js')
    script(src='/app/lib/angular.min.js')
    script(src='/app/controllers/rest_client_controller.js')
    script(src='/app/factories/ace_factory.js')
    script(src='/app/app.js')
  body(ng-controller='RestClientCtrl')
    header.page-header
      h1.text-center My Site
    .container-fluid
      .row
        .col-lg-2
          block sidebar
        .col-lg-5
          block request
        .col-lg-5
          block response
    .text-center
      p Running on node with Express, Jade and Stylus